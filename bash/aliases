alias reload_aliases='source ~/.bash/aliases'
alias aliases='vim ~/.bash/aliases && reload_aliases'

# git
alias gs='git status' 
alias gd='git diff'
alias gpl='git pull'
alias gp='git push'
alias gl='git log'
alias gc='git commit'
alias gcs='git commit -S' # gpg signed
alias gcm='git commit -m'
alias gcsm='git commit -S -m' # gpg signed
